<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@raw/dark_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/topMarginTitle"
        android:fontFamily="casual"
        android:gravity="center_horizontal"
        android:text="@string/mainTitle"
        android:textColor="@color/black"
        android:textSize="@dimen/mainTitleSize"
        android:textStyle="bold" />

    <Button
        android:id="@+id/tnLibrary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/topMarginTitle"
        android:textAllCaps="false"
        android:background="@drawable/shape_menu_button"
        android:text="@string/library"
        android:textSize="20dp"
        android:fontFamily="casual"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/topMarginTitle"
        android:textAllCaps="false"
        android:background="@drawable/shape_menu_button"
        android:text="Test"
        android:textSize="20dp"
        android:fontFamily="casual"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnTestDB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/topMarginTitle"
        android:textAllCaps="false"
        android:background="@drawable/shape_menu_button"
        android:text="Test DB"
        android:textSize="20dp"
        android:fontFamily="casual"
        android:textStyle="bold"/>

</LinearLayout>
